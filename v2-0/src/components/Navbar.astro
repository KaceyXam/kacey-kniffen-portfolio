---
const pathname = new URL(Astro.request.url).pathname;
---

<nav>
    <a href="/">
        <img src="/kacey-kniffen-logo.svg" />
    </a>
    <ul>
        <li class={`${pathname === "/projects" ? "active" : ""}`}>
            <a href="/projects">Projects</a>
        </li>
        <li class={`${pathname === "/blog" ? "active" : ""}`}>
            <a href="/blog">Blog</a>
        </li>
        <li>
            <a href="https://github.com/KaceyXam" target="_blank" rel="noreferrer">GitHub</a>
        </li>
    </ul>
</nav>

<style lang="scss" scoped>
    nav {
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        padding-inline: 2em;
        padding-block: .5em;
        ul {
            display: flex;
            list-style: none;
            gap: 1em;
            li {
                transition: color 75ms ease-in-out;
                font-size: 20px;
                color: #d3d3d3;
                &.active {
                    color: #05D58A;
                }
                &:hover {
                    color: white;
                    cursor: pointer;
                }
                a {
                    color: inherit;
                    text-decoration: none;
                }
            }
        }
    }
</style>