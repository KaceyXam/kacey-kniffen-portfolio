---
export const prerender = true;

import { CollectionEntry, getCollection } from "astro:content";
import WaveSvg from "../../components/svg/WaveSvg.astro";
import GlobalLayout from "../../layouts/GlobalLayout.astro";

export async function getStaticPaths() {
	const blogPosts = await getCollection("blog");
	return blogPosts.map((blogPost) => ({
		params: { slug: blogPost.slug },
		props: blogPost,
	}));
}

const { data, render, id } = Astro.props;
const { Content } = await render();
---

<GlobalLayout title={data.title}>
	<img class="bg-img" src={data.thumbnail} />
	<section class="content">
		<div class="title-text">
			<div>{data.date.toDateString()}</div>
			<h1>{data.title}</h1>
		</div>
		<article>
			<Content />
			<a href="/blog">
				<i class="fa-solid fa-arrow-left"></i> Back to blog posts
			</a>
		</article>
	</section>
</GlobalLayout>

<style lang="scss" is:global>
	.bg-img {
		position: relative;
		margin-inline: auto;
		margin-bottom: -20rem;
		z-index: -1;
	}

	.bg-img:is(img) {
		max-width: 90rem;
		width: 100%;
	}

	.bg-img:is(.bg-gradient) {
		min-height: 50vh;
		width: 100%;
		background-image: linear-gradient(
			90deg,
			rgba(2, 0, 36, 1) 0%,
			rgba(9, 9, 121, 1) 35%,
			rgba(0, 212, 255, 1) 100%
		);
	}

	.content {
		background-color: var(--bg-color);
		border-radius: 0.75em 0.75em 0 0;
		padding: 1em;
		margin-inline: auto;
		max-width: 60rem;
		width: calc(100% - 4rem);
		margin-bottom: 2rem;
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
	}

	.title-text {
		padding-block: 0.75em 1.5em;
		border-bottom: var(--accent-color) 2px solid;
		margin-bottom: 2em;
		border-radius: 0.25em 0.25em 0 0;
		text-align: center;
		z-index: 10;
		background-color: var(--bg-color);
	}

	article {
		font-size: 18px;
		p {
			text-indent: 2em;
			line-height: 1.8em;
			margin-bottom: 0.5em;
		}
		h2 {
			font-size: 1.75em;
			font-weight: 700;
			margin-bottom: 0.75em;
		}
		h3 {
			font-size: 1.25em;
			font-weight: 700;
			margin-bottom: 0.5em;
		}
	}
</style>
